{
  "name": "native-smart-scroll-container",
  "version": "1.0.0",
  "description": "Enable scroll in the container based on content size",
  "author": "Jakub Biesiada",
  "license": "MIT",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "prepack": "npm run prettier && npm run lint && npm run build",
    "clean": "rimraf lib/*",
    "build": "tsc",
    "prebuild": "npm run clean",
    "test": "jest --coverage",
    "watch": "npm run build -- --watch",
    "watch:test": "npm run test -- --watch",
    "lint": "eslint --fix 'src/**/*.tsx'",
    "prettier": "prettier --write 'src/**/*.tsx'",
    "commit": "git-cz",
    "semantic-release": "semantic-release",
    "prepare": "husky install",
    "pre-commit": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/native-ly/native-smart-scroll-container.git"
  },
  "keywords": [
    "react",
    "android",
    "ios",
    "mobile",
    "react-native",
    "web",
    "component",
    "touch",
    "container",
    "scroll",
    "smart",
    "auto",
    "disable",
    "expo",
    "enable"
  ],
  "bugs": {
    "url": "https://github.com/native-ly/native-smart-scroll-container/issues"
  },
  "homepage": "https://github.com/native-ly/native-smart-scroll-container#readme",
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@testing-library/jest-native": "^4.0.4",
    "@testing-library/react-native": "^9.0.0",
    "@types/jest": "^27.0.3",
    "@types/react": "^17.0.37",
    "@types/react-native": "^0.66.8",
    "@typescript-eslint/parser": "^5.6.0",
    "babel-jest": "^27.4.2",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^8.4.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-react-native": "^3.11.0",
    "husky": "^7.0.4",
    "jest": "^27.4.3",
    "lint-staged": "^12.1.2",
    "prettier": "^2.5.1",
    "react": "^17.0.2",
    "react-native": "^0.66.3",
    "react-test-renderer": "^17.0.2",
    "semantic-release": "^18.0.1",
    "ts-jest": "^27.1.0",
    "typescript": "^4.5.2"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-native": ">=0.59.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "src/**/*.tsx": [
      "npm run prettier",
      "npm run lint"
    ]
  }
}
